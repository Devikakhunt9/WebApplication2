@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;
@model DataTable;

<form>
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <form method="post" asp-area="MST_Student" asp-controller="Home" asp-action="Index">
                        <div class="input-group">
                            <input type="text" name="StudentName" class="form-control" placeholder="Student Name">
                            <input type="text" name="BranchName" class="form-control" placeholder="Branch Name">
                            <input type="text" name="CityName" class="form-control" placeholder="City Name">
                            <button type="submit" class=" btn btn-primary">Serch </button>
                        </div>
                    </form>
                </td>
            </tr>
        </tbody>

    </table>
</form>
<a class="btn btn-success" asp-area="MST_Student"  asp-controller="Home" asp-action="Add">Add Student +</a>
<table class="table">
    <tr>
        <th scope="col">
            No.
        </th>
        <th scope="col">
            StudentName
        </th>
        <th scope="col">
            Branch Name
        </th>
        <th scope="col">
            CityName
        </th>
        <th scope="col">
            MobileNoStudent
        </th>
        <th scope="col">
            MobileNoFather
        </th>
        <th scope="col">
            Email
        </th>
        <th scope="col">
            Address
        </th>
        <th scope="col">
            BirthDate
        </th>
        <th scope="col">
            Age
        </th>
        <th scope="col">
            IsActive
        </th>
        <th scope="col">
            Gender
        </th>
        <th scope="col">
            Password
        </th>
        <th scope="col">
            Created
        </th>
        <th scope="col">
            Modified
        </th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    
        @foreach (DataRow dr in Model.Rows)
        {
           <tr>
            <th scope="col">
                @dr["StudentID"]
            </th>
            <td class="fs-6">@dr["StudentName"]</td>
            <td class="fs-6">@dr["BranchName"]</td>
            <td class="fs-6">@dr["CityName"]</td>
            <td class="fs-6">@dr["MobileNoStudent"]</td>
            <td class="fs-6">@dr["Email"]</td>
            <td class="fs-6">@dr["MobileNoFather"]</td>
            <td class="fs-6">@dr["Address"]</td>
            <td class="fs-6">@dr["BirthDate"]</td>
            <td class="fs-6">@dr["Age"]</td>
            <td class="fs-6">@dr["IsActive"]</td>
            <td class="fs-6">@dr["Gender"]</td>
            <td class="fs-6">@dr["Password"]</td>
            <td class="fs-6">@dr["Created"]</td>
            <td class="fs-6">@dr["Modified"]</td>
            <td>
                <form method="post" asp-area="MST_Student" asp-controller="Home" asp-action="Add">
                    <input type="hidden" name="StudentId" value="@Convert.ToInt32(dr["StudentID"])" />
                    <button class="btn btn-primary">Edit</button>
                </form>
            </td>
            <td>
                <form method="post" asp-area="MST_Student" asp-controller="Home" asp-action="Delete">
                    <input type="hidden" name="StudentId" value="@Convert.ToInt32(dr["StudentID"])" />
                <button class="btn btn-danger">Delete</button>
                </form>
            </td>
           </tr> 
        }
</table>