@{
    ViewData["Title"] = "Add Country Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model WebApplication2.Areas.LOC_Country.Models.LOC_CountryModel
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@*<p>@ViewBag.Data</p>*@
<form method="post" asp-area="LOC_Country" asp-controller="LOC_Country"  asp-action="Save">
    <input type="hidden" asp-for="CountryID" />
    <table class="table">
        <tr>
            <td>Country Name</td>
            <td>:</td>
            <td>
                <input asp-for="CountryName" type="text" />
                <span class="text-danger" asp-validation-for="CountryName"></span>
            </td>
        </tr>
        <tr>
            <td>Country Code</td>
            <td>:</td>
            <td>
                <input asp-for="CountryCode" type="text" />
                <span  class="text-danger" asp-validation-for="CountryCode"></span>
            </td>
        </tr>
    </table>
    <button type="submit" class="btn btn-primary">ADD</button>
</form>