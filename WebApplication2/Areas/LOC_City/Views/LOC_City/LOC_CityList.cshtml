@{
    ViewData["Title"] = "City List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Data;
@model DataTable;
<form>
    <table class="table">
        <tbody>
            <tr>
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                Select Country
                            </td>
                            <td>
                                :
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                    </table>
                </td>
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                Select State
                            </td>
                            <td>
                                :
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                    </table>
                </td>
                <td colspan="2">
                    <table>
                        <tr>
                            <td>
                                Select City
                            </td>
                            <td>
                                :
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                    <button class="btn btn-success" asp-area="LOC_Country" asp-controller="LOC_Country" asp-action="LOC_CountryListByID">Submit</button>
                </td>
            </tr>
        </tbody>

    </table>
</form>
<a class="btn btn-success" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAddEdit">Add City +</a>
<table class="table">
    <tr>
        <th scope="col">
           No.
        </th>
        <th scope="col">
            City name
        </th>
        <th scope="col">
            City COde
        </th>
        <th scope="col">
            State NAme
        </th>
        <th scope="col">
            Country Name
        </th>
        <th scope="col">
            Created
        </th>
        <th scope="col">
            Modified
        </th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
    @foreach(DataRow dr in Model.Rows)
    {
        <tr>
            <th scope="col">@dr["CityID"]</th>
            <td>@dr["CityName"]</td>
            <td>@dr["Citycode"]</td>
            <td>@dr["StateName"]</td>
            <td>@dr["CountryName"]</td>
            <td>@dr["CreationDate"]</td>
            <td>@dr["Modified"]</td>
            <td>
                <form method="post" asp-area="LOC_City" asp-controller="LOC_City" asp-action="LOC_CityAddEdit">
                    <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"])"/>
                <button class="btn btn-warning">Edit</button>
                </form>
            </td>
            <td>
                <form method="post" asp-area="LOC_City" asp-controller="LOC_City" asp-action="Delete">
                    <input type="hidden" name="CityID" value="@Convert.ToInt32(dr["CityID"])"/>
                <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
